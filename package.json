{
  "name": "nodetest",
  "version": "1.0.0",
  "description": "Node Test",
  "license": "MIT",
  "author": "Jakub Skopal <kuba@sensornetworks.co.za>",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "clean": "rimraf lib",
    "lint": "tslint --format verbose 'src/**/*.ts'",
    "test": "mocha --require source-map-support/register --recursive lib/system-tests/**/*-spec.js",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "ts-loader": "^1.3.3"
  },
  "devDependencies": {
    "@types/chai": "3.4.30",
    "@types/node": "6.0.31",
    "chai": "^3.5.0",
    "mocha": "^3.1.0",
    "rimraf": "^2.5.4",
    "ts-node": "^1.2.2",
    "tslint": "3.14.0-dev.1",
    "typescript": "^2.0.10",
    "typescript-formatter": "^3.1.0"
  },
  "engines": {
    "node": ">=4.0.0"
  }
}
